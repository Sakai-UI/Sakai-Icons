{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
      "runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceRoot}"],
			"outFiles": ["${workspaceFolder}/out/**/*.js"],
      "smartStep": true,
      "sourceMaps": true,
			"preLaunchTask": "npm: build"
		},
		{
      "name": "Extension Tests",
			"type": "extensionHost",
			"request": "launch",
      "runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceRoot}"],
			"outFiles": ["${workspaceFolder}/out/**/*.js"],
      "smartStep": true,
      "sourceMaps": true,
			"preLaunchTask": "npm: build"
		}
	]
}
